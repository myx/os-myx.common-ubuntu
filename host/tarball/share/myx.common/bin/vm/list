#!/bin/sh

##### !!! THIS SCRIPT MUST BE OVERRIDEN IN OS-DEPENDENT IMPLEMENTATION !!! #####

VmList(){
	if [ -z "`which virsh`" ] ; then
		echo "ERROR: VmList: 'virsh' (kvm control utility) is not installed!" >&2
		return 1
	fi
	virsh list --all
}

case "$0" in
	*/myx.common/bin/vm/list) 
		if [ "$1" = "--help" ] ; then
			echo "Syntax: myx.common vm/list" >&2
			exit 1
		fi
		set -e
		VmList "$@"
	;;
esac
